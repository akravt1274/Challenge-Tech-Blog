<div class="p-4">
    <div class="bg-primary p-3">
        <h2 class="text-white-50">Create New Post</h2>
    </div>

    <div class="border border-primary border-4 p-4">
        <form>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title">
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea type="content" class="form-control" id="content" rows="4"></textarea>
            </div>
            <p id="error-msg" class="text-danger"></p>
            <button id="create" type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

