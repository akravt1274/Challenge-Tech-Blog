<h2 class="text-primary m-2 p-2">Welcome to the Tech Blog!</h2>

{{#if posts.length}}
<div class="container p-2">
    <div class="row justify-content-around">
        {{#each posts as |post| }}
        <div class="card mb-2" style="width: 50rem;">
            <div class="card-body p-0">
                <h5 class="p-2 mt-2 mb-0"><a href="/api/posts/view/{{post.id}}" class="nav-link p-0" type="button">{{post.title}}</a></h5>                
                <p class="card-text text-end mb-2"><small class="text-muted">{{format_date post.date_created}}</small></p>
                {{!-- <p class="card-text">{{post.content}}</p> --}}
                {{#if post.comments.length}}                
                {{#each post.comments as |comment| }}
                <div class="card mb-2">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-0 text-muted"><strong>@{{comment.username}} </strong><span><small
                                    class="text-muted">{{format_date
                                    comment.date_created}}</small></span></h6>
                        <p class="card-text px-4 fw-lighter lh-sm fs-6">{{comment.content}}</p>
                    </div>
                </div>
                {{/each}}
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}

<div class="container p-4">
    <h3 class="text-primary mb-4 text-center">Master the technology skills to drive your career!</h3>
</div>
{{/if}}
