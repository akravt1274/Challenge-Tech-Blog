{{#if logged_in}}
<div class="p-4">
    <div class="bg-primary p-1">
        <h3 class="text-white-50">Update Post</h3>
    </div>
    <div class="border border-primary border-4 p-4">
        <form>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" value="{{postData.title}}">
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea type="content" class="form-control" id="content" rows="4">{{postData.content}}</textarea>
            </div>
            <p id="error-msg" class="text-danger"></p>
            <button id="update" data-id="{{id}}" type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script src="/js/post.js"></script>
{{/if}}