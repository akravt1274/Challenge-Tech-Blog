{{#if logged_in}}
{{!-- <h2 class="text-primary m-2 p-2">Welcome, {{username}}!</h2> --}}
    {{#if posts.length}}
    <div class="container p-2">
        <div class="row justify-content-around">            
            {{#each posts as |post| }}
            <div class="card mb-2" style="width: 50rem;">
                <div class="card-body p-0">
                    <h5 class="py-2"><a href="/api/posts/view/{{post.id}}" class="nav-link p-0" type="button">{{post.title}}</a></h5>
                    <div>
                        <button type="button" data-id="{{post.id}}" class="btn btn-link delete-post">Delete</button>
                        <p class="card-text text-end mb-2"><small class="text-muted">{{format_date post.date_created}}</small></p>
                    </div>
                    
                </div>
            </div>                
            {{/each}}
        </div>
            <div class="text-center p-2">
                <button id="add-post" type="button" class="btn btn-primary">New Post</button>
            </div>
        </div>        
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    
    <script src="/js/dashboard.js"></script>
    {{else}}
    <div class="text-center p-2">
        <button id="add-post" type="button" class="btn btn-primary">New Post</button>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    
    <script src="/js/dashboard.js"></script>
    {{/if}}

{{/if}}
