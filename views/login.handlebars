<div class="container">
    <div class="row py-4">
        <h3 class="text-primary mb-4 text-center">Master the technology skills to drive your career!</h3>
        <div class="col-4"></div>
        <div class="col-4">
            <div class="bg-primary p-2">
                <h3 class="text-white-50 mb-0">Login</h3>
            </div>
            <div class="border border-primary border-4 p-4">                
                <form>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password">
                    </div>
                    <p id="error-msg" class="text-danger"></p>
                    <button id="login-btn" type="submit" class="btn btn-primary">Login!</button>
                    <a id="signup" class="btn btn-link" role="button">Sign up instead</a>
                </form>
            </div>
        </div>  
        <div class="col-4">
    </div>
</div>

